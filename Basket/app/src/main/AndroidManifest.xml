<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kv.basket">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Basket">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Plist"
            android:label="@string/title_activity_plist"
            android:parentActivityName=".Basket" />
        <activity
            android:name=".AddProduct"
            android:label="@string/title_activity_addpoduct"/>
          <!--  android:parentActivityName=".Plist" />-->
        <activity
            android:name=".ProductList"
            android:label="@string/activity_poduct_list"
            android:parentActivityName=".ListAll"></activity> 
        <activity android:name=".ListAll"
            android:label="@string/title_activity_listall"
            android:parentActivityName=".Basket" >
        </activity>
        <activity android:name=".editProduct"
            android:label="@string/title_activity_edit"
            android:parentActivityName=".ProductList">
        </activity>
    </application>

</manifest>
